<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView61"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="15"
                android:text="   Customer Name"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="20"
                android:text="     Date:"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="20"
                android:text="Total"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/txinvname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="20"
                android:gravity="start|center_vertical"
                android:text="Ronaldinho Gaucho"
                android:textColor="@color/colorNegrobrillante"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txinvdate"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="20"
                android:gravity="center_horizontal|center_vertical"
                android:text="14/feb/2022"
                android:textColor="@color/colorNegro"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txinvtotal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="20"
                android:gravity="right|center_vertical"
                android:text="13,299,750"
                android:textColor="@color/colorNegro"
                android:textSize="10sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvdate2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="10"
                app:cardBackgroundColor="@color/semiTransparentverdeColor"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/txinvdate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="30"
                    android:textColor="@color/colorverdeesmeralda"
                    android:textSize="12dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvstate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="20"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/txinvstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="Venta"
                    android:textSize="12dp" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imgvpdf"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="10"
                android:background="@color/fui_transparent"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_picture_as_pdf_black_24dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
