<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:id="@+id/cardhomely"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView61"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="24"
                android:gravity="center_vertical"
                android:text="@string/Customer_Name"
                android:textSize="8sp"
                app:autoSizeMaxTextSize="11sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="20"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/Date"
                android:textSize="8sp"
                app:autoSizeMaxTextSize="11sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="20"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/Total"
                android:textSize="8sp"
                app:autoSizeMaxTextSize="11sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="20">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvdate2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="3dp"
                    app:cardBackgroundColor="@color/semiTransparentverdeColor"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/txinvdate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"

                        android:text="30"
                        android:textColor="@color/colorverdeesmeralda"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvstate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="20"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/txinvstate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="1dp"
                    android:gravity="center_horizontal|center_vertical"
                    app:autoSizeMaxTextSize="12sp"
                    app:autoSizeMinTextSize="3sp"
                    app:autoSizeTextType="uniform" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/txinvname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="28"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeStepGranularity="1sp"
                android:gravity="start|center_vertical"
                android:text="Ronaldinho Gaucho"
                android:textColor="@color/colorNegrobrillante"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="9sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/txinvdate"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="18"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="center_horizontal|center_vertical"
                android:text="14/feb/2022"
                android:textColor="@color/colorNegro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txinvtotal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="18"
                android:autoSizeMaxTextSize="12sp"
                android:autoSizeMinTextSize="9sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:gravity="right|center_vertical"
                android:text="13,299,750"
                android:textColor="@color/colorNegro"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mtpdf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"


                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#b30c00"
                    app:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/textView51"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:text="PDF"
                        android:textColor="#b30c00"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
