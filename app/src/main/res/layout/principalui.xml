<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_span="1"
                android:layout_weight="1"
                android:text="Suma total"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:layout_weight="1"
                android:text="Unidades"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:layout_weight="1"
                android:text="Precio"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txsuma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ems="10"

                android:inputType="numberDecimal"
                android:shadowColor="#d900b9"
                android:shadowRadius="10"
                android:textAlignment="center"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txcuenta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"

                android:inputType="numberDecimal"
                android:textAlignment="center"

                android:textColor="#636363"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txprecio"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Promedio"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Ingreso de Datos"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Valor MercancÃ­a"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txultimo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="#636363"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txactual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_weight="1"

                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowRadius="10"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txvalor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"

                android:layout_weight="1"
                android:ems="10"
                android:hint="$"
                android:inputType="number"
                android:shadowColor="#05f735"
                android:shadowRadius="10"
                android:textAlignment="viewEnd"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:soundEffectsEnabled="false"
                    android:text="@string/_1"
                    app:backgroundTint="@null">

                </Button>

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="@string/_2"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:text="@string/_3"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btborrar"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="1dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="ELI"
                    android:textColor="#ffffff"
                    app:backgroundTint="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="@string/_4"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/bt5"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="@string/_5"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/bt6"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="@string/_6"
                    app:backgroundTint="@null" />

                <Switch
                    android:id="@+id/dcmbutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="false"
                    android:gravity="top"
                    android:text="Shift" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt7"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="@string/_7"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/bt8"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="@string/_8"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/bt9"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="@string/_9"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btcalcular"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="Limpiar"
                    android:textColor="#ffffff"
                    app:backgroundTint="@color/colorgirsazul" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/btpunto"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"
                    android:text="@string/_punto"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btcero"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btngris"

                    android:text="@string/_0"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btadd"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/btngris"
                    android:text="@string/_add"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    app:backgroundTint="@color/colorgirsazul" />

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton

                android:id="@+id/floatingActionButton8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/grid3"
                android:layout_alignBottom="@+id/grid3"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:onClick="Enviardatos"
                app:backgroundTint="@color/colorAccent"
                app:srcCompat="@drawable/ic_check_bold" />

            <GridView
                android:id="@+id/grid3"
                style="@android:style/Widget.Holo.Light.GridView"
                android:layout_width="wrap_content"
                android:layout_height="247dp"
                android:background="#ebedec"
                android:cacheColorHint="@color/colorPrimary"
                android:columnWidth="5dp"
                android:drawSelectorOnTop="true"
                android:horizontalSpacing="2dp"
                android:numColumns="6"
                android:textAlignment="textEnd"
                android:textDirection="inherit"
                android:verticalSpacing="1dp">

            </GridView>


        </RelativeLayout>

    </LinearLayout>
</ScrollView>