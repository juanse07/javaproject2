<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="4dp"
    android:elevation="300dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp">>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_weight="60"
            android:background="@color/colorBlancox"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:orientation="horizontal"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/deletesym"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"

                    android:layout_weight="15"
                    android:padding="2dp"
                    app:iconTint="#E5E5E5"
                    app:srcCompat="@drawable/ic_baseline_settings_24" />

                <TextView
                    android:id="@+id/textView65"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="center_horizontal"
                    android:text="@string/Tax"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView64"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:gravity="center_horizontal"
                    android:text="@string/Product_Name"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"

                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="17" />

                <CheckBox
                    android:id="@+id/checkIVA"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|start"
                    android:layout_weight="15"
                    android:gravity="top"
                    android:padding="5dp"
                    android:text="@string/Tax" />

                <TextView
                    android:id="@+id/nombreproducto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="9dp"
                    android:layout_weight="68"
                    android:gravity="top"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="#1F1F1F"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonaddproducto"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="7dp"


                android:layout_marginBottom="3dp"


                android:layout_weight="40"


                android:text="@string/Add"
                android:textColor="@color/colorAccent"
                android:textSize="12dp"
                android:visibility="visible"
                app:cornerRadius="8dp"
                app:elevation="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_margin="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="40"
            android:background="@color/colorBlancox"
            android:gravity="bottom"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="start|top"
                android:text="@string/Quantity"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_weight="40"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="20"
                        app:cardCornerRadius="5dp"
                        app:strokeColor="@color/colorRappi"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:id="@+id/cantmenos2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="20"
                            app:srcCompat="@drawable/ic_remove_black_18dp" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/canttext2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="60"
                        android:gravity="center_horizontal"
                        android:text="TextView"
                        android:textColor="@color/colorNegrobrillante"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="20"
                        app:cardCornerRadius="5dp"
                        app:strokeColor="@color/colorverdeesmeralda"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:id="@+id/cantmas2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="20"
                            app:srcCompat="@drawable/ic_add_black_18dp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="start|top"
                android:text="@string/Price"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_weight="40"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="20"
                        app:cardCornerRadius="5dp"
                        app:strokeColor="@color/colorRappi"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:id="@+id/preciomenos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="20"
                            app:srcCompat="@drawable/ic_remove_black_18dp" />
                    </com.google.android.material.card.MaterialCardView>

                    <EditText
                        android:id="@+id/preciotext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="60"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:inputType="number"
                        android:textColor="@color/colorNegrobrillante"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="20"
                        app:cardCornerRadius="5dp"
                        app:strokeColor="@color/colorverdeesmeralda"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:id="@+id/preciomas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="20"
                            app:srcCompat="@drawable/ic_add_black_18dp" />
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            android:background="@drawable/btn2"
            app:backgroundTint="@color/colorGris"


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>