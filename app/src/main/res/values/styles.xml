<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/LightDialog</item>
        <item name="android:alertDialogTheme">@style/LightDialog</item>
        <item name="android:dialogPreferenceStyle">@style/LightDialog</item>


    </style>

    <style name="barcustom" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/customactiobar</item>
    </style>
    <style name="LightDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>

    <style name="customactiobar" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

<!--    <style name="AppTheme.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

   <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="App_ButtonStyleFooter" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorgirsazul</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>
    <style name="App_ButtonStyleWhite" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlancox</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
<!--        <item name="android:textAlignment">center</item>-->
        <item name="android:textAppearance">@style/Widget.MaterialComponents.Button</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>
    <style name="App_ButtonCalc" parent="Widget.AppCompat.Button">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#1f1f1f</item>
        <item name="android:textSize">34sp</item>

<!--        <item name="android:textAlignment">center</item>-->
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="titledrawer">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="monserrat">
        @import url(\'https://fonts.googleapis.com/css2?family=Montserrat:wght@500&amp;display=swap');
    </style>



</resources>
